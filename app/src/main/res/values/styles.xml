<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTxtv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base_txt_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/circular_book</item>
    </style>

    <style name="MarginTxtv" parent="BaseTxtv">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="TitleTxtv" parent="MarginTxtv">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="DateTxtv" parent="MarginTxtv">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="MetaTxtv" parent="MarginTxtv">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="MiniTitleTxtv" parent="MarginTxtv">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="MiniDateTxtv" parent="MarginTxtv">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="MiniMetaTxtv" parent="MarginTxtv">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

</resources>