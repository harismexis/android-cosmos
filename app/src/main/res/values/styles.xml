<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTxtv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base_txt_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TitleTxtv" parent="BaseTxtv">
        <item name="android:textSize">@dimen/large_txt</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="MetaTxtv" parent="BaseTxtv">
        <item name="android:textSize">@dimen/normal_txt</item>
    </style>

    <style name="SmallTitleTxtv" parent="TitleTxtv">
        <item name="android:textSize">@dimen/medium_txt</item>
    </style>

    <style name="VhMetaTxtv" parent="MetaTxtv">
        <item name="android:textSize">@dimen/small_txt</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- search view -->

    <style name="SearchViewIconStyle">
        <item name="android:searchIcon">@drawable/ic_search_white_18dp</item>
        <item name="android:closeIcon">@drawable/ic_close_white_18dp</item>
    </style>

    <style name="SearchViewTextStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_nine</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:queryBackground">@null</item>
        <item name="android:searchHintIcon">@null</item>
    </style>

    <!-- apod view -->
    <style name="ApodDateTxtv" parent="BaseTxtv">
        <item name="android:textSize">@dimen/big_txt</item>
    </style>

</resources>